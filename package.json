{
  "name": "@c4605/react-components",
  "description": "Some useful React components",
  "main": null,
  "repository": "https://github.com/bolasblack/react-components",
  "author": "c4605 <bolasblack@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "docz:dev": "rm -rf .docz && docz dev",
    "docz:build": "rm -rf .docz && docz build",
    "docz:serve": "rm -rf .docz && docz serve",
    "docz:publish": "./scripts/publish_docz.sh",
    "test": "eslint \"packages/**/src/**/*.{js,jsx,ts,tsx}\" && yarn compile && NODE_ENV=test jest --no-cache 'packages/.*/src'",
    "compile": "tsc -b ./tsconfig.compile.json",
    "release": "lerna version --sign-git-tag --conventional-commits --create-release github"
  },
  "prettier": "@c4605/toolconfs/prettierrc",
  "jest": {
    "setupFiles": [
      "./configs/jestSetup.ts"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "html"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@c4605/toolconfs": "^5.1.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "babel-plugin-auto-import": "^1.0.5",
    "coveralls": "^3.0.9",
    "css-loader": "^6.0.0",
    "docz": "1.2.0",
    "docz-theme-default": "^1.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "git-hook-pure": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-cli": "^29.0.0",
    "lint-staged": "^10.0.1",
    "marked": "^4.0.0",
    "patch-package": "^6.2.0",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^1.19.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.0.0",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "**/@types/react": "^18.0.0",
    "**/@types/react-dom": "^18.0.0",
    "**/react": "^18.0.0",
    "**/react-dom": "^18.0.0",
    "**/react-test-renderer": "^18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "lerna": "^3.20.2",
    "trim-right": "^1.0.1"
  }
}
